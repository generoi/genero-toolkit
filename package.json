{
  "name": "genero-toolkit",
  "displayName": "Genero Toolkit",
  "publisher": "GeneroOyAb",
  "description": "You dont need to remember all the commands related to your project, Setup your commands in [yourproject]/.vscode/genero.json and quick access them in Activity bar.",
  "version": "0.0.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/generoi/genero-toolkit.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Snippets",
    "Debuggers",
    "Other"
  ],
  "icon": "./resources/icon-light.png",
  "activationEvents": [
    "onCommand:genero-toolkit.runCommand"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "workbench.view.extension.generoCommands": [
        {
          "id": "generoCommands",
          "name": "Genero Commands",
          "icon": "./resources/icon-light.png"
        }
      ]
    },
    "commands": [
      {
        "command": "genero-toolkit.openGuide",
        "title": "Genero - Guide"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.18.11",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "files": [
    "out",
    "src",
    "resources",
    "webview"
  ],
  "dependencies": {
    "@vscode/vsce": "^2.19.0",
    "markdown-it": "^13.0.1"
  },
  "private": true
}
